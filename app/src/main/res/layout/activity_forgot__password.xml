<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/proback"
    tools:context=".Forgot_Password">

    <TextView
        android:id="@+id/forgot_pass_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:textSize="22dp"
        android:letterSpacing="0.01"
        android:textColor="#C8FFFFFF"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/et_forgot_pass_email"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:singleLine="true"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:hint="Type your email here"
        android:textColorHint="#C8FFFFFF"
        android:layout_below="@+id/forgot_pass_head"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/button_send_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_forgot_pass_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Send Email"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/round_btn"
        android:textColor="#C8FFFFFF"
        android:textAllCaps="true"
        android:letterSpacing="0.05"

        />

</RelativeLayout>